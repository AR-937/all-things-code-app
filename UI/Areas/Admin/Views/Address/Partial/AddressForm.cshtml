
@model DTO.AddressDTO
<div class="box-body">
    <input name="ID" value="@Model.ID" hidden type="number" />
    <div class="form-group">
        <label>Address</label>
        @Html.TextBoxFor(x => x.AddressContent, new { @class = "form-control", @placeholder = "Address" })
        @Html.ValidationMessageFor(x => x.AddressContent)
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label>Phone</label>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Phone" })
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <div class="form-group">
        <label>Second Phone</label>
        @Html.TextBoxFor(x => x.Phone2, new { @class = "form-control", @placeholder = "Second Phone" })
        @Html.ValidationMessageFor(x => x.Phone2)
    </div>
    <div class="card-footer">
        <button class="btn btn-primary">Save</button>
    </div>
</div>
